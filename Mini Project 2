    font-size: 20px;
}

.navbar-nav .nav-link:hover {
    color: yellow;
}

.section {
    padding: 100px 0;
    background-color: black;
    margin-bottom: 20px;
}

.welcome-message {
    font-size: 2.5rem;
    color: orange;
    opacity: 0;
    transform: translateY(-20px);
    animation: fadeInDown 3s forwards;
}

.welcome-message + p {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 3s forwards 2s;
}

