}

/* Centering contact section */
#contact {
    text-align: center; /* Center align contents */
}

#contact .container {
    max-width: 600px; /* Adjust container width */
    margin: auto; /* Center container horizontally */
}

.form-group {
    margin-bottom: 20px; /* Adjust spacing between form groups */
}

.form-group label {
    display: block; /* Labels as block elements to appear above input fields */
    margin-bottom: 5px; /* Space between label and input */
}

.project-thumbnail {
    width: 100%;
    height: auto;
    border: 2px solid white;
}

#back-to-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
