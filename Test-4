    display: flex;
    align-items: center;
    gap: 10px;
}
.search-profile input {
    padding: 5px;
    font-size: 16px;
}
.profile-icon {
    width: 30px;
    height: 30px;
}
main {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
}
.content {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 20px;
    border-radius: 8px;
}
.content h1 {
    font-size: 36px;
    margin-bottom: 10px;
    color: blue; 
}

.content p {
    font-size: 18px;
}


footer {
    background-color: rgba(0, 0, 0, 0.7); 
    color: white;
    text-align: center;
    padding: 10px 0;
}

@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        align-items: flex-start;
    }

    .nav-links {
        flex-direction: column;
        width: 100%;
    }

    .nav-links a {
        margin: 10px 0;
    }

    .content h1 {
        font-size: 28px;
    }

    .content p {
        font-size: 16px;
    }

    footer {
        position: static;
    }
}

@media (max-width: 480px) {
    .nav-links a {
        margin: 5px 0;
    }

    .content h1 {
        font-size: 24px;
    }

    .content p {
        font-size: 14px;
    }

   

    </style>
